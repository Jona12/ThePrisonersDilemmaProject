                                            <children>
                                                <TableView fx:id="analysis_table" prefHeight="296.0" prefWidth="342.0"
                                                           AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                                    <columns>
                                                        <TableColumn fx:id="rank" prefWidth="75.0" text="Rank"/>
                                                        <TableColumn fx:id="entry" prefWidth="75.0" text="Entry"/>
                                                        <TableColumn fx:id="score" prefWidth="75.0" text="Score"/>
                                                    </columns>
                                                </TableView>
                                            </children>
