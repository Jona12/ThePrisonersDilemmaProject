                    <content>
                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                            <children>
                                <SplitPane dividerPositions="0.4" prefHeight="318.0" prefWidth="598.0"
                                           AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <items>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                                            <children>
                                                <VBox prefHeight="296.0" prefWidth="226.0" AnchorPane.bottomAnchor="0.0"
                                                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                                      AnchorPane.topAnchor="0.0">
                                                    <children>
                                                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                                                            <children>
                                                                <Label fx:id="match_high" prefHeight="99.0"
                                                                       prefWidth="226.0"
                                                                       text="The highest scoring match is: [matchID] with a combined score of [score]. [strategy1] scored [score1], while [strategy2] scored [score2]."
                                                                       textAlignment="CENTER" wrapText="true"
                                                                       AnchorPane.bottomAnchor="0.0"
                                                                       AnchorPane.leftAnchor="0.0"
                                                                       AnchorPane.rightAnchor="0.0"
                                                                       AnchorPane.topAnchor="0.0"/>
                                                            </children>
                                                        </AnchorPane>
                                                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                                                            <children>
                                                                <Label fx:id="match_low" prefHeight="99.0"
                                                                       prefWidth="226.0"
                                                                       text="The lowest scoring match is: [matchID] with a combined score of [score]. [strategy1] scored [score1], while [strategy2] scored [score2]."
                                                                       textAlignment="CENTER" wrapText="true"
                                                                       AnchorPane.bottomAnchor="0.0"
                                                                       AnchorPane.leftAnchor="0.0"
                                                                       AnchorPane.rightAnchor="0.0"
                                                                       AnchorPane.topAnchor="0.0"/>
                                                            </children>
                                                        </AnchorPane>
                                                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                                                            <children>
                                                                <Label fx:id="match_average" prefHeight="99.0"
                                                                       prefWidth="226.0"
                                                                       text="On average, a match in the tournament has a total combined score of [score]."
                                                                       textAlignment="CENTER" wrapText="true"
                                                                       AnchorPane.bottomAnchor="0.0"
                                                                       AnchorPane.leftAnchor="0.0"
                                                                       AnchorPane.rightAnchor="0.0"
                                                                       AnchorPane.topAnchor="0.0"/>
                                                            </children>
                                                        </AnchorPane>
                                                    </children>
                                                </VBox>
                                            </children>
                                            <padding>
                                                <Insets left="15.0" right="15.0"/>
                                            </padding>
                                        </AnchorPane>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                                            <children>
                                                <StackedBarChart fx:id="match_graph" prefHeight="296.0"
                                                                 prefWidth="342.0" AnchorPane.bottomAnchor="0.0"
                                                                 AnchorPane.leftAnchor="0.0"
                                                                 AnchorPane.rightAnchor="0.0"
                                                                 AnchorPane.topAnchor="0.0">
                                                    <xAxis>
                                                        <CategoryAxis side="BOTTOM"/>
                                                    </xAxis>
                                                    <yAxis>
                                                        <NumberAxis side="LEFT"/>
                                                    </yAxis>
                                                </StackedBarChart>
                                            </children>
                                        </AnchorPane>
                                    </items>
                                </SplitPane>
                            </children>
                        </AnchorPane>
                    </content>
                </TitledPane>
                <TitledPane fx:id="titled_strategy" animated="false" text="Strategy Data">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <SplitPane dividerPositions="0.4" prefHeight="318.0" prefWidth="598.0"
                                           AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <items>
                                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                                            <children>
                                                <VBox prefHeight="296.0" prefWidth="226.0" AnchorPane.bottomAnchor="0.0"
                                                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                                      AnchorPane.topAnchor="0.0">
                                                    <children>
                                                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                                                            <children>
                                                                <Label fx:id="strategy_high" prefHeight="99.0"
                                                                       prefWidth="1808.0"
                                                                       text="The highest scoring strategy is: [strategy1] with a total combined score of [score1]. [strategy1] [outcome1] more often than [outcome2] over the course of the tournament. Its highest scoring match is [matchID] where it scored [matchScore1] and its opponent, [strategy2], scored [matchScore2]."
                                                                       textAlignment="CENTER" wrapText="true"
                                                                       AnchorPane.bottomAnchor="0.0"
                                                                       AnchorPane.leftAnchor="0.0"
                                                                       AnchorPane.rightAnchor="0.0"
                                                                       AnchorPane.topAnchor="0.0"/>
                                                            </children>
                                                        </AnchorPane>
                                                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                                                            <children>
                                                                <Label fx:id="strategy_low" prefHeight="99.0"
                                                                       prefWidth="1803.0"
                                                                       text="The lowest scoring strategy is: [strategy1] with a total combined score of [score1]. [strategy1] [outcome1] more often than [outcome2] over the course of the tournament. Its highest scoring match is [matchID] where it scored [matchScore1] and its opponent, [strategy2], scored [matchScore2]."
                                                                       textAlignment="CENTER" wrapText="true"
                                                                       AnchorPane.bottomAnchor="0.0"
                                                                       AnchorPane.leftAnchor="0.0"
                                                                       AnchorPane.rightAnchor="0.0"
                                                                       AnchorPane.topAnchor="0.0"/>
                                                            </children>
                                                        </AnchorPane>
                                                        <AnchorPane prefHeight="200.0" prefWidth="200.0">
                                                            <children>
                                                                <Label fx:id="strategy_average" prefHeight="99.0"
                                                                       prefWidth="489.0"
                                                                       text="On average, a strategy in the tournament has a total combined score of [score]."
                                                                       textAlignment="CENTER" wrapText="true"
                                                                       AnchorPane.bottomAnchor="0.0"
                                                                       AnchorPane.leftAnchor="0.0"
                                                                       AnchorPane.rightAnchor="0.0"
                                                                       AnchorPane.topAnchor="0.0"/>
                                                            </children>
                                                        </AnchorPane>
                                                    </children>
                                                </VBox>
                                            </children>
                                            <padding>
                                                <Insets left="15.0" right="15.0"/>
